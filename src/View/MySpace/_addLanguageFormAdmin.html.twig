<div class="container">
    <div class="row justify-content-center">
        <div class="col text-center">
            <button type="button" class="btn btn-primary h-100 w-50" data-toggle="modal" data-target="#newLanguage">
                Ajouter un langage
            </button>
        </div>
    </div>
</div>
<div class="modal fade" id="newLanguage" tabindex="-1" role="dialog" aria-labelledby="createLanguageTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="loginTitle">Ajouter un langage</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" class="newLanguageForm">
                    <div class="form-group mw-100">
                        <label for="newLanguageName">Nom</label>
                        <input type="text" class="form-control" id="newLanguageName" name="newLanguageName"
                               placeholder="Nom">
                    </div>
                    <div class="form-group mw-100">
                        <label for="newLanguageIdentifier">Identifier</label>
                        <input type="text" class="form-control" id="newLanguageIdentifier" name="newLanguageIdentifier"
                               placeholder="Identifier">
                    </div>
                    <div class="form-group mw-100">
                        <label for="newLanguageIcon">Identifier</label>
                        <input type="text" class="form-control" id="newLanguageIcon" name="newLanguageIcon"
                               placeholder="Exemple de format: 'fab fa-css3'">
                    </div>
                    <div class="form-group my-4 mw-100">
                        <label for="newLanguageSumbit"></label>
                        <button type="submit" id="newLanguageSumbit" class="btn btn-primary">Ajouter</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mw-100" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>