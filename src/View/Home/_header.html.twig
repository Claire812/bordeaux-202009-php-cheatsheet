<header class="header">
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-sm-2 offset-sm-10">
                <div class="d-flex flex-row-reverse">
                    <div class="nav-icons">
                        <div class="btn">
                            <i class="fas fa-globe"></i>
                        </div>
                    </div>
                    <div class="nav-icons">
                        {% if (session.user) %}
                            <div class="btn" id="UserAndLogoutDropDown" data-toggle="dropdown">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="dropdown-menu" aria-labelledby="UserAndLogoutDropDown">
                                <a class="dropdown-item" href="/MySpace/main/{{ session.user.id }}">Ma page</a>
                                <a class="dropdown-item" href="/MySpace/logout/'">Se d√©connecter</a>
                            </div>
                        {% else %}
                            <div class="btn" data-toggle="modal" data-target="#login">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="loginTitle"
                                 aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    {% include '/Home/_login.html.twig'%}

                                </div>
                            </div>

                            <div class="modal fade" id="registration" tabindex="-1" role="dialog"
                                 aria-labelledby="registrationTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">

                                {% include '/Home/_register.html.twig' %}

                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="nav-icons">
                        <div class="btn">
                            <a href="/" class="header a"> <i class="fas fa-home"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2 offset-2 ">
        <a href="/">
            <div class="animated-logo"></div>
        </a>
    </div>
</header>