<!-- Button trigger modal -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col text-center">
            <button type="button" class="btn btn-primary h-100 w-50" data-toggle="modal" data-target="#newPost">
                Créer une fiche
            </button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newPost" tabindex="-1" role="dialog" aria-labelledby="createPostTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" class="newPostForm">
                    <div class="form-group mw-100">
                        <label for="newPostTitle">Titre</label>
                        <input type="text" class="form-control" id="newPostTitle" name="newPostTitle" placeholder="Titre">
                    </div>
                    <div class="form-group mw-100">
                        <label for="newPostLanguage">Langage</label>
                        <select class="custom-select my-1 mr-sm-2" id="newPostLanguage" name="newPostLanguage">
                            <option></option>
                            {% for language in languages %}
                            <option value="{{ language.id }}">{{ language.name }}</option>
                            {% endfor %}
                       </select>
                    </div>
                    <div class="form-group mw-100">
                        <label for="newPostContent"></label>
                        <textarea class="form-control" id="newPostContent" name="newPostContent" rows="10" placeholder="Tu peux écrire ici..."></textarea>
                    </div>
                    <a href="https://michelf.ca/projects/php-markdown/concepts/" target="_blank">Comment mettre en forme mon post (liens, gras, liste,...)</a>
                    <div class="form-group my-4 mw-100">
                        <label for="newPostSend"></label>
                        <button type="submit" id="newPostSend" class="btn btn-primary">Poster</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mw-100" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>