<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" id="registrationTitle">Inscription</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form action="MySpace/add" method="post">
            <div class="form-group">
                <label for="nameRegistration">Ton nom</label>
                <input type="text" name="name" class="form-control"
                       id="nameRegistration"
                       placeholder="Choisis bien, tu n'as qu'une seule chance">
                <small class="text-danger"> {{ session.nameErrorAlreadyExists }} </small>
            </div>
            <div class="form-group">
                <label for="emailRegistration">E-mail</label>
                <input type="email" name="email" class="form-control"
                       id="emailRegistration" aria-describedby="emailHelp"
                       placeholder="Entre ton email">
            </div>
            <div class="form-group">
                <label for="passwordRegistration">Mot de passe</label>
                <input type="password" name="password" class="form-control"
                       id="passwordRegistration" placeholder="Entre ton mot passe">
                <small class="form-text text-muted">Une lettre capitale, 42
                    chiffres,
                    126 caractères spéciaux et une danse du ventre minimum.</small>
            </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-dark" data-toggle="modal"
                data-target="#login" id="buttonRegistration"
                data-dismiss="modal">Clique ici pour te connecter !
        </button>
        <button type="sumbit" class="btn btn-success">S'inscrire</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal"
                id="closeRegistration">Fermer
        </button>
    </div>
    </form>
</div>